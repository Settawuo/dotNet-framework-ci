<script>
    function getApiData() {
        const baseUrl = window.location.origin;
        const apiUrl = `${baseUrl}${window.location.pathname}/FbbCpGwInterface/GetVersion`;
        fetch(apiUrl)
            .then(response => response.text())
            .then(data => {
                if (data) {
                    document.getElementById('api-result').innerHTML = data.replace(/"/g, "");
                } else {
                    document.getElementById('api-result').innerHTML = "ไม่มีข้อมูล";
                }
            })
            .catch(error => {
                console.error('Error fetching API data:', error);
                document.getElementById('api-result').innerHTML = "ไม่สามารถเรียกข้อมูลได้";
            });
    }

    window.onload = getApiData;
</script>