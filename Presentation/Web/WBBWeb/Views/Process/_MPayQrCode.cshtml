<script type="text/javascript">

    function convertStringToMoneyFormat(input) {
        var result = "";
        try {
            if (input == "undefined" || input == "") {
                result = "";
            }
            else {
                input = input.replace(",", "");
                var numInput = parseFloat(input);

                if (isNaN(numInput)) {
                    result = "";
                }
                else {
                    result = numInput.toFixed(2).replace(/(\d)(?=(\d{3})+(?!\d))/g, '$1,');
                }
            }

        }
        catch (ex) {
            result = input;
        }
        return result;
    }

    function makeCode() {
        $('#qrcodePic').html('');

        jQuery('#qrcodePic').qrcode({
            text: $('#qrCodeStr').val()
        });


    }

    $('#btnReGenQrCode').click(function () {
        //20.8 Payment - mPay Super Duper
        if ('@CALL_SUPER_DUPER_FLAG' == "Y") {
            // QRCode SuperDuper
            $("#SuperDuperProductName").val("MESH");
            $("#SuperDuperServiceName").val("Generate QR");
            getPaymentQRCodeToSuperDuper();
        }
        else {
            getPaymentToMerchantQrCode();
        }
    });

    $('#btnQrCode_Back').click(function () {
        LockScreen(true);
        $('#divQrCode').hide();
        $('#divPayMent').show();
        stopWaitForPayQrCode();
        LockScreen(false);
    });

</script>
