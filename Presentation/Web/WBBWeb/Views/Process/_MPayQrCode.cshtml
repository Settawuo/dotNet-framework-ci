@using WBBEntity.PanelModels
@model QuickWinPanelModel
@{
    var B_GEN_QR_CODE = "";
    var B_BACK = "";
    var L_PAY_WITH_QR_CODE_1 = "";
    var L_PAY_WITH_QR_CODE_2 = "";
    var L_MPAY_QR_CODE_FOOTER_1 = "";
    var L_MPAY_QR_CODE_FOOTER_2 = "";
    var L_QR_CODE_REMARK = "";
    var L_QR_CODE_REMARK_IMG = "";

    if (ViewBag.LabelFBBORV41 != null)
    {
        var LabelFBBORV41 = (List<LovScreenValueModel>)ViewBag.LabelFBBORV41;
        L_PAY_WITH_QR_CODE_1 = LabelFBBORV41.Any(c => c.Name == "L_PAY_WITH_QR_CODE_1") ? LabelFBBORV41.FirstOrDefault(c => c.Name == "L_PAY_WITH_QR_CODE_1").DisplayValue : "";
        L_PAY_WITH_QR_CODE_2 = LabelFBBORV41.Any(c => c.Name == "L_PAY_WITH_QR_CODE_2") ? LabelFBBORV41.FirstOrDefault(c => c.Name == "L_PAY_WITH_QR_CODE_2").DisplayValue : "";
        B_GEN_QR_CODE = LabelFBBORV41.Any(c => c.Name == "B_GEN_QR_CODE") ? LabelFBBORV41.FirstOrDefault(c => c.Name == "B_GEN_QR_CODE").DisplayValue : "";
        B_BACK = LabelFBBORV41.Any(c => c.Name == "B_BACK") ? LabelFBBORV41.FirstOrDefault(c => c.Name == "B_BACK").DisplayValue : "";
        L_MPAY_QR_CODE_FOOTER_1 = LabelFBBORV41.Any(c => c.Name == "L_MPAY_QR_CODE_FOOTER_1") ? LabelFBBORV41.FirstOrDefault(c => c.Name == "L_MPAY_QR_CODE_FOOTER_1").DisplayValue : "";
        L_MPAY_QR_CODE_FOOTER_2 = LabelFBBORV41.Any(c => c.Name == "L_MPAY_QR_CODE_FOOTER_2") ? LabelFBBORV41.FirstOrDefault(c => c.Name == "L_MPAY_QR_CODE_FOOTER_2").DisplayValue : "";
        L_QR_CODE_REMARK = LabelFBBORV41.Any(c => c.Name == "L_QR_CODE_REMARK") ? LabelFBBORV41.FirstOrDefault(c => c.Name == "L_QR_CODE_REMARK").DisplayValue : "";
        L_QR_CODE_REMARK_IMG = LabelFBBORV41.Any(c => c.Name == "L_QR_CODE_REMARK") ? LabelFBBORV41.FirstOrDefault(c => c.Name == "L_QR_CODE_REMARK").Blob : "";


        if (L_QR_CODE_REMARK_IMG != "")
        {
            string ImgSCPEText = "";
            String img64Url = string.Format("data:image/jpg;base64,{0}", L_QR_CODE_REMARK_IMG);
            ImgSCPEText = "<img src='" + img64Url + "'/>";
            L_QR_CODE_REMARK = L_QR_CODE_REMARK.Replace("[Image]", ImgSCPEText);
        }
        else
        {
            L_QR_CODE_REMARK = L_QR_CODE_REMARK.Replace("[Image]", "");
        }
    }

    //20.8 Payment - mPay Super Duper
    string CALL_SUPER_DUPER_FLAG = "";
    if (ViewBag.FbbConstant != null)
    {
        var FbbConstant = (List<FbbConstantModel>)ViewBag.FbbConstant;

        CALL_SUPER_DUPER_FLAG = FbbConstant.Any(f => f.Field == "CALL_SUPER_DUPER_FLAG") ? FbbConstant.First(f => f.Field == "CALL_SUPER_DUPER_FLAG").Validation : "";
    }
}

