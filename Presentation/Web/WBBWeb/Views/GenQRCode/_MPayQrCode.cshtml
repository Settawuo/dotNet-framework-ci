@using WBBEntity.PanelModels
@model QuickWinPanelModel
@{
    var B_GEN_QR_CODE = "";
    var L_MPAY_QR_CODE = "";
    var L_MPAY_QR_CODE_FOOTER_1 = "";
    var L_MPAY_QR_CODE_FOOTER_2 = "";
    var L_QR_CODE_REMARK = "";
    var L_POPUP_PAYMENT_QR_CODE_ERROR = "";

    if (ViewBag.LabelFBBOR041 != null)
    {
        var LabelFBBOR041 = (List<LovScreenValueModel>)ViewBag.LabelFBBOR041;
        L_MPAY_QR_CODE = LabelFBBOR041.Any(c => c.Name == "L_MPAY_QR_CODE") ? LabelFBBOR041.FirstOrDefault(c => c.Name == "L_MPAY_QR_CODE").DisplayValue : "";
        B_GEN_QR_CODE = LabelFBBOR041.Any(c => c.Name == "B_GEN_QR_CODE") ? LabelFBBOR041.FirstOrDefault(c => c.Name == "B_GEN_QR_CODE").DisplayValue : "";
        L_MPAY_QR_CODE_FOOTER_1 = LabelFBBOR041.Any(c => c.Name == "L_MPAY_QR_CODE_FOOTER_1") ? LabelFBBOR041.FirstOrDefault(c => c.Name == "L_MPAY_QR_CODE_FOOTER_1").DisplayValue : "";
        L_MPAY_QR_CODE_FOOTER_2 = LabelFBBOR041.Any(c => c.Name == "L_MPAY_QR_CODE_FOOTER_2") ? LabelFBBOR041.FirstOrDefault(c => c.Name == "L_MPAY_QR_CODE_FOOTER_2").DisplayValue : "";
        L_QR_CODE_REMARK = LabelFBBOR041.Any(c => c.Name == "L_QR_CODE_REMARK") ? LabelFBBOR041.FirstOrDefault(c => c.Name == "L_QR_CODE_REMARK").DisplayValue : "";
        L_POPUP_PAYMENT_QR_CODE_ERROR = LabelFBBOR041.Any(c => c.Name == "L_POPUP_PAYMENT_QR_CODE_ERROR") ? LabelFBBOR041.FirstOrDefault(c => c.Name == "L_POPUP_PAYMENT_QR_CODE_ERROR").DisplayValue : "";
    }
}

<style>
    #qrcodePic {
        text-align: center;
    }

    #qrcodePic canvas {
        max-height: 256px !important;
        max-width: 256px !important;
        display: inline !important;
        width: 100%;
        height: 100%;
        margin: auto;
        padding: 0;
    }

    #qrcodeHeader {
        max-width: 330px !important;
        max-height: 115px !important;
        margin: auto;
        width: 100%;
        padding-bottom: 3px;
    }

    #qrcodeFooter {
        text-align: center;
        max-width: 256px !important;
        margin: auto;
        width: 100%;
    }

    #lblFooter1 {
        float: left;
    }

    #lblFooter {
        float: right;
    }

    #lblFooter2 {
        color: #cccccc;
        font-weight: 200;
        float: right;
        clear: left;
        margin-top: -6px;
    }

    #qrcodeRemark {
        text-align: center;
    }

    #lblFooterRemark {
    }

    #qrcodePicContent {
        max-width: 330px;
        height: 100%;
        padding: 0px;
        text-align: center;
        margin: auto;
        border: 3px solid #cccccc;
        padding: 0 0 50px 0;
    }

</style>

@Html.Hidden("qrCodeStr")

<div id="pageQrCode" class="container addrounded" style="display: none;">
    <h4 class="page-header tgreen">@Html.Raw(L_MPAY_QR_CODE)</h4>
    <p class="clearfix"></p>
    <p class="clearfix"></p>
    <div class="col-md-10 col-md-offset-1 col-xs-12">
        <div class="col-sm-12 col-xs-12">
            <div id="qrcodePicContent">
                <div id="qrcodeHeader">
                    <img src="~/Content/images/scpe/MyQrCodeHeader.png" />
                </div>
                <div id="qrcodePic"></div>
                <div id="qrcodeFooter">
                    <label id="lblFooter1">@L_MPAY_QR_CODE_FOOTER_1</label>
                    <label id="lblFooter"></label>
                    <label id="lblFooter2">@L_MPAY_QR_CODE_FOOTER_2</label>
                </div>
            </div>
            <p class="clearfix"></p>
            <p class="clearfix"></p>
            <p class="clearfix"></p>
            <p class="clearfix"></p>
            <div id="qrcodeRemark">
                <label id="lblFooterRemark">@L_QR_CODE_REMARK</label>
            </div>
        </div>
        <p class="clearfix"></p>
        <p class="clearfix"></p>
        <p class="clearfix"></p>
    </div>

    <p class="clearfix page-header"></p>
    <div class="col-md-10 col-md-offset-1 col-xs-12">
        <div class="col-md-12 text-center">
            <button type="button" class="btn btn-default btn-for-xs" onclick="getPaymentToMerchantQrCode()">&nbsp; @Html.Raw(B_GEN_QR_CODE) &nbsp; </button>
        </div>
        <p class="clearfix"></p>
    </div>
</div>

<script type="text/javascript">

    function getPaymentToMerchantQrCode() {
        LockScreen(true);

        var payMentOrderId = $("#PayMentOrderID").val();
        var payMentRecurringChargeVat = $("#PayMentRecurringChargeVAT").val();

        $.ajax({
            type: "POST",
            url: "/GenQRCode/GetPaymentToMerchantQrCode",
            data: {
                "payMentOrderId": payMentOrderId,
                "payMentRecurringChargeVat": payMentRecurringChargeVat
            },
            dataType: "json",
            async: true,
            success: function (data) {
                if (data != null) {
                    if (data.RespCode == "0000") {
                        $("#qrCodeStr").val(data.QrCodeStr);
                        $("#qrCodeStr").text(data.QrCodeStr);
                        makeCode();
                        $('#pageQrCode').show();
                        var qrCharge = convertStringToMoneyFormat(payMentRecurringChargeVat);
                        $("#lblFooter").text(qrCharge);
                    }
                    else {
                        PopupMessage('@Html.Raw(L_POPUP_PAYMENT_QR_CODE_ERROR)');
                        $('#myModal').modal('show');
                    }
                }
            },
            complete: function (xhr, textStatus) {
                LockScreen(false);
            }
        });
    }

    function convertStringToMoneyFormat(input) {
        var result = "";
        try {
            if (input == "undefined" || input == "") {
                result = "";
            }
            else {
                input = input.replace(",", "");
                var numInput = parseFloat(input);

                if (isNaN(numInput)) {
                    result = "";
                }
                else {
                    result = numInput.toFixed(2).replace(/(\d)(?=(\d{3})+(?!\d))/g, '$1,');
                }
            }
            
        }
        catch (ex) {
            result = input;
        }
        return result;
    }

    function makeCode() {
        $('#qrcodePic').html('');

        jQuery('#qrcodePic').qrcode({
            text: $('#qrCodeStr').val()
        });


    }



</script>
