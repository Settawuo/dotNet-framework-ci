
@model WBBContract.Minions.MinionProcInstallContactCommand

@using (Html.BeginForm("InstallContact", "Minion", FormMethod.Post, new { @id = "frmInstallProfileProcInsContact" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="row form-data">
        <div class="form-group">
            <div class="col-md-6">
                <div class="input-group col-md-12">
                    <div class="input-group-addon" style="width: 220px; text-align: left;">P_BA_ID</div>
                    @Html.TextBoxFor(model => model.ba_id, new { @class = "form-control" })
                </div>
                <div class="input-group col-md-12">
                    <div class="input-group-addon" style="width: 220px; text-align: left;">P_CONTACT_SEQ</div>
                    @Html.TextBoxFor(model => model.Contact_Seq, new { @class = "form-control" })
                </div>
                <div class="input-group col-md-12">
                    <div class="input-group-addon" style="width: 220px; text-align: left;">P_CONTACT_ADDR_ID</div>
                    @Html.TextBoxFor(model => model.Contact_Addr_id, new { @class = "form-control" })
                </div>
                <div class="input-group col-md-12">
                    <div class="input-group-addon" style="width: 220px; text-align: left;">P_CONTACT_FIRST_NAME</div>
                    @Html.TextBoxFor(model => model.Contact_First_Name, new { @class = "form-control" })
                </div>
                <div class="input-group col-md-12">
                    <div class="input-group-addon" style="width: 220px; text-align: left;">P_CONTACT_LAST_NAME</div>
                    @Html.TextBoxFor(model => model.Contact_Last_Name, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group col-md-12">
                    <div class="input-group-addon" style="width: 240px; text-align: left;">P_CONTACT_HOME_PHONE</div>
                    @Html.TextBoxFor(model => model.Contact_Home_Phone, new { @class = "form-control" })
                </div>
                <div class="input-group col-md-12">
                    <div class="input-group-addon" style="width: 240px; text-align: left;">P_CONTACT_MOBILE_PHONE1</div>
                    @Html.TextBoxFor(model => model.Contact_Mobile_Phone1, new { @class = "form-control" })
                </div>
                <div class="input-group col-md-12">
                    <div class="input-group-addon" style="width: 240px; text-align: left;">P_CONTACT_MOBILE_PHONE2</div>
                    @Html.TextBoxFor(model => model.Contact_Mobile_Phone2, new { @class = "form-control" })
                </div>
                <div class="input-group col-md-12">
                    <div class="input-group-addon" style="width: 240px; text-align: left;">P_CONTACT_EMAIL</div>
                    @Html.TextBoxFor(model => model.Contact_Email, new { @class = "form-control" })
                </div>
            </div>
        </div>
        
    </div>
    
    <div class="row raw-xml hidden">
        <div class="col-md-12">
            <textarea class="form-control" id="xmlString"  rows="20" spellcheck="false"></textarea>
            <textarea class="form-control hidden" id="hdnxmlString" name="xmlString" rows="20"></textarea>

        </div>
    </div>
    <div class="clearfix"></div>
    <br />
    <div class="row">
        <div class="col-md-12">
            <button type="submit" id="btnSendInstallProfileProcMain" class="btn btn-primary" data-toggle="modal">Send</button>
            <button type="reset" class="btn btn-default" data-toggle="modal">Reset</button>
        </div>
    </div>

}
