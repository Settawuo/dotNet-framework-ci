@model WBBContract.Minions.MinionGetListPackageByChangeQuery

@using (Html.BeginForm("GetListPackageByChange", "Minion", FormMethod.Post, new { @id = "frmListPackageChange" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="row form-data">
        <div class="form-group">
            <div class="col-md-6">
                <div class="input-group col-md-12">
                    <div class="input-group-addon" style="width: 220px; text-align: left;">P_OWNER_PRODUCT</div>
                    @Html.TextBoxFor(model => model.owner_product, new { @class = "form-control" })
                </div>
                <div class="input-group col-md-12">
                    <div class="input-group-addon" style="width: 220px; text-align: left;">P_PACKAGE_FOR</div>
                    @Html.TextBoxFor(model => model.package_for, new { @class = "form-control" })
                </div>
                <div class="input-group col-md-12">
                    <div class="input-group-addon" style="width: 220px; text-align: left;">P_SERENADE_FLAG</div>
                    @Html.TextBoxFor(model => model.serenade_flag, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group col-md-12">
                    <div class="input-group-addon" style="width: 220px; text-align: left;">P_REF_ROW_ID</div>
                    @Html.TextBoxFor(model => model.ref_row_id, new { @class = "form-control" })
                </div>
                <div class="input-group col-md-12">
                    <div class="input-group-addon" style="width: 220px; text-align: left;">P_CUSTOMER_TYPE</div>
                    @Html.TextBoxFor(model => model.customer_type, new { @class = "form-control" })
                </div>
                <div class="input-group col-md-12">
                    <div class="input-group-addon" style="width: 220px; text-align: left;">P_ADDRESS_ID</div>
                    @Html.TextBoxFor(model => model.address_id, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
    
    <div class="row raw-xml hidden">
        <div class="col-md-12">
            <textarea class="form-control" id="xmlString"  rows="20" spellcheck="false"></textarea>
            <textarea class="form-control hidden" id="hdnxmlString" name="xmlString" rows="20"></textarea>

        </div>
    </div>
    <div class="clearfix"></div>
    <br />
    <div class="row">
        <div class="col-md-12">
            <button type="submit" id="btnSendGetListPackageService" class="btn btn-primary" data-toggle="modal">Send</button>
            <button type="reset" class="btn btn-default" data-toggle="modal">Reset</button>
        </div>
    </div>

}
