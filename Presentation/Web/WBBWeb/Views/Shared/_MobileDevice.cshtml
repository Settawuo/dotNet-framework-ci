<script type="text/javascript">
    const _isMobileDevice = checkMobileDevice();

    function checkMobileDevice() {
        let check = false;
        const _toMatches = [
            /Android/i,
            /webOS/i,
            /iPhone/i,
            /iPad/i,
            /iPod/i,
            /BlackBerry/i,
            /Windows Phone/i
        ];

        const _userAgent = navigator.userAgent;

        for (let i = 0; i < _toMatches.length; i++) {
            if (_userAgent.match(_toMatches[i])) {
                check = true;
                break;
            }
        }

        return check;
    }
</script>