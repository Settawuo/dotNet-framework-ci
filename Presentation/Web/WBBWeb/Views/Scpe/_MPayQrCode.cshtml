        B_BACK = LabelFBBOR028.Any(c => c.Name == "B_BACK") ? LabelFBBOR028.FirstOrDefault(c => c.Name == "B_BACK").DisplayValue : "";
        L_MPAY_QR_CODE_FOOTER_1 = LabelFBBOR028.Any(c => c.Name == "L_MPAY_QR_CODE_FOOTER_1") ? LabelFBBOR028.FirstOrDefault(c => c.Name == "L_MPAY_QR_CODE_FOOTER_1").DisplayValue : "";
        L_MPAY_QR_CODE_FOOTER_2 = LabelFBBOR028.Any(c => c.Name == "L_MPAY_QR_CODE_FOOTER_2") ? LabelFBBOR028.FirstOrDefault(c => c.Name == "L_MPAY_QR_CODE_FOOTER_2").DisplayValue : "";
        L_MPAY_QR_CODE_FOOTER_REMARK = LabelFBBOR028.Any(c => c.Name == "L_MPAY_QR_CODE_FOOTER_REMARK") ? LabelFBBOR028.FirstOrDefault(c => c.Name == "L_MPAY_QR_CODE_FOOTER_REMARK").DisplayValue : "";
