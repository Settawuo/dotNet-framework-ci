                                                   model.Field(p => p.province).Editable(false);
                                                   model.Field(p => p.dormitory_name).Editable(false);
                                                   model.Field(p => p.BUILDING).Editable(false);
                                                   model.Field(p => p.Room_Amount).Editable(false);
