                            </div>
                        </div>
                        @*end row2*@
                        <div id="SearchRow3">
                            <div class="col-sm-12 col-md-12 ">
                                <div id="gridresult" class="row">
                                    @(Html.Kendo().Grid<WBBEntity.PanelModels.FBBWebConfigModels.ConfigurationOnOffServices>()
                                        .Name("gridDormitory")
                                        .Columns(columns =>
                                        {
                                            columns.Bound(p => p.dormitory_id).Title(@G_DORMITORY_NAME).HtmlAttributes(new { style = "text-align:left;" }).Hidden();
                                            columns.Bound(p => p.StatusOld).Title(@G_DORMITORY_NAME).HtmlAttributes(new { style = "text-align:left;" }).Hidden();
                                            columns.Bound(p => p.region_code).Title(@G_REGION).HtmlAttributes(new { style = "text-align:left;" }).Width(150);
                                            columns.Bound(p => p.province).Title(G_DORMITORY_PROVINCE).HtmlAttributes(new { style = "text-align:left;" }).Width(150);
                                            columns.Bound(p => p.dormitory_name).Title(@G_DORMITORY_NAME).HtmlAttributes(new { style = "text-align:left;" }).Width(150);
                                            columns.Bound(p => p.BUILDING).Title(@G_BUILDING_NO).HtmlAttributes(new { style = "text-align:left;" }).Width(150);
                                            columns.Bound(p => p.Room_Amount).Title(@G_ROOM_AMOUNT).HtmlAttributes(new { style = "text-align:left;" }).Width(100);
