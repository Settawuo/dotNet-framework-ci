<script>
    
    function onChange() {
        $("#DSLMDID").data("kendoDropDownList").dataSource.read({ nodeNameTH: $("#proname").val() });
    }

    function onSearch() {
       
        $("#loading").fadeIn("slow");
        setTimeout("timing()", 5000);

        $.ajax({
            url: '/Report/SearchSummary',
            data: {
                nodeNameTH: $("#proname").val(), nodeId: $("#DSLMDID").val()
            },
            dataType: "json",
            type: 'POST',
            success: function (data) {

            }
        });
        
    }

    function timing() {
        window.location.href = "@Url.Action("SummaryPort", "Report")";
    }

    
   
</script>