                return false;
            }
         
           
        }
        // ------------Check-Scm2 /
        if (Scm_contact_name_02 == "" || Scm_contact_name_02 == " ") {
            if (Scm_contact_tel_02 != "" && Scm_contact_tel_02 != " ") {
                $("#validatefor-Scm_contact_name_02").html(ValidationIcon() + "This field is required.");
                return false;
            } else {
                $("#validatefor-Scm_contact_name_02").html("");
            }


        } else if (Scm_contact_tel_02 == "" || Scm_contact_tel_02 == " ") {

            if (Scm_contact_name_02 != "" && Scm_contact_name_02 != " ") {
                $("#validatefor-Scm_contact_tel_02").html(ValidationIcon() + "This field is required.");
                return false;
            } else {
                 $("#validatefor-Scm_contact_tel_02").html("");
               
            }
        } else {

