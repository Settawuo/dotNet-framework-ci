    $(document).ready(function () {
        ClearValidationDateValueContactMLR();
        $("#Scm_contact_tel_01").keyup(function () {
            CheckKeyUps("Scm_contact_tel_01", "[0-9-]");
        });
        $("#Scm_contact_tel_02").keyup(function () {
            CheckKeyUps("Scm_contact_tel_02", "[0-9-]");
        });

        $("#Scm_contact_tel_03").keyup(function () {
            CheckKeyUps("Scm_contact_tel_03", "[0-9-]");
        });


        $("#Scm_contact_name_01").keyup(function () {
            CheckKeyUps("Scm_contact_name_01", "[^0-9-#/$!&*%_@@^()_+=]");
        });
        $("#Scm_contact_name_02").keyup(function () {
            CheckKeyUps("Scm_contact_name_02", "[^0-9-#/$!&*%_@@^()_+=]");
        });
        $("#Scm_contact_name_03").keyup(function () {
            CheckKeyUps("Scm_contact_name_03", "[^0-9-#/$!&*%_@@^()_+=]");
        });
    });
    function CheckKeyUps(id, RexStr) {
        var strKey = $("#" + id).val();
        var strBuilder = "";
        var filter = new RegExp(RexStr);
        for (var i = 0; i < strKey.length; i++) {
            if (filter.test(strKey.substr(i, 1))) {
                strBuilder += strKey.substr(i, 1);
            }
        }
        $("#" + id).val(strBuilder);
    }
    function ClearValidationDateValueContactMLR() {
        $("#validatefor-Scm_contact_name_01").html("");
        $("#validatefor-Scm_contact_name_02").html("");
        $("#validatefor-Scm_contact_name_03").html("");

        $("#validatefor-Scm_contact_tel_01").html("");
        $("#validatefor-Scm_contact_tel_02").html("");
        $("#validatefor-Scm_contact_tel_03").html("");

    }
    function CancelConfigMLREmailContact() {
        $("#EditConfiLMREmailContactPopup").data("kendoWindow").close();
    }
    function checkPhoneNumber(param) {
        //console.log("param=" + param)
        var ResultIndexTel = param.indexOf("0");
        if (ResultIndexTel != 0) {
            return false;
        } else {
            return  true;
        }
       
    }
    function ValidationDateValueContactMLR() {
        // console.log("ValidationDateValueContactMLR");
        ClearValidationDateValueContactMLR();
        // -------------Scm 1
        var Scm_contact_name_01 = $("#Scm_contact_name_01").val();
        var Scm_contact_tel_01 = $("#Scm_contact_tel_01").val();
        // -------------Scm 2
        var Scm_contact_name_02 = $("#Scm_contact_name_02").val();
        var Scm_contact_tel_02 = $("#Scm_contact_tel_02").val();
        // -------------Scm 3
        var Scm_contact_name_03 = $("#Scm_contact_name_03").val();
        var Scm_contact_tel_03 = $("#Scm_contact_tel_03").val();
        

        // ------------Check-Scm 1
        if (Scm_contact_name_01 == "" ||  Scm_contact_name_01 == " ") {
         //   console.log("Scm_contact_name_01=null")
            $("#validatefor-Scm_contact_name_01").html(ValidationIcon() + "This field is required.");
            return false;
        } else {
            $("#validatefor-Scm_contact_name_01").html("");
        }

        if (Scm_contact_tel_01 == "" || Scm_contact_tel_01 == " ") {
            $("#validatefor-Scm_contact_tel_01").html(ValidationIcon() + "This field is required.");
            return false;
        } else {

            if (checkPhoneNumber(Scm_contact_tel_01)) {
                $("#validatefor-Scm_contact_tel_01").html("");
            } else {
