    }
    function ConfigMLREmailContactConfirm() {
        
         var chkContact = ValidationDateValueContactMLR();
         // console.log("chkContact=" + chkContact);
        if (chkContact) {
            Loading(); 
            var LovID = $("#lov_id").val();
            var Text = "";
            var Scm_contact_name_01 = $("#Scm_contact_name_01").val();
            var Scm_contact_tel_01 = $("#Scm_contact_tel_01").val();
            // -------------Scm 1
            
                Text += Scm_contact_name_01           
                Text += " " + Scm_contact_tel_01
           
            // -------------Scm 2

            var Scm_contact_name_02 = $("#Scm_contact_name_02").val();
            var Scm_contact_tel_02 = $("#Scm_contact_tel_02").val();

           
                Text += ";" + Scm_contact_name_02        
                Text += " " + Scm_contact_tel_02
               
            

            // -------------Scm 3
            var Scm_contact_name_03 = $("#Scm_contact_name_03").val();
            var Scm_contact_tel_03 = $("#Scm_contact_tel_03").val();
           
                Text += ";" + Scm_contact_name_03
                Text += " " + Scm_contact_tel_03         
                
            
            // -------------Other
            var Scm_contact_Other = $("#Scm_contact_Other").val();           
                Text += ";" + Scm_contact_Other;
                //Text += ";" + Scm_contact_Other.replace(/ /g, '').trim()
            
            // -------------

            data = JSON.stringify({
                'id': LovID, "Text": Text
            });
         
           // console.log("data" + data)
            $.ajax({
                type: "POST",
                contentType: 'application/json',
                url: "/ConfigurationLMREmail/UpdateLovLMREmail",
                data: data,
                async: false,
                dataType: "json",
                success: function (response) {
                    if (response.Code === "0") {
                        $("#EditConfiLMREmailContactPopup").data("kendoWindow").close();
                        showFeedback("success", response.message, "System Information");
                    }
                    else {
                        $("#EditConfiLMREmailContactPopup").data("kendoWindow").close();
                        showFeedback("error", response.message, "System Information");
                    }
                },
                failure: function (msg) {
                }
            });
            $("#GridViewConfigEmail").data("kendoGrid").dataSource.read();
        }
        Loading(0);
    }
</script>