@model WBBEntity.PanelModels.LoginPanelModel
@{
    Layout = null;         
}
<!DOCTYPE html>
<html>

<head>
    <link rel="icon" href="~/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes">
    @*fix CSS device*@
    <title>Fixed Broadband Web Config</title>
   
	@Scripts.Render("~/bundles/js/jquery")	

	@Scripts.Render("~/bundles/js/kendo")

    @Scripts.Render("~/bundles/js/login")
    @Styles.Render("~/bundles/css/login")

</head>

<body id="login">
    <div class="background-top"></div>
    <div class="background-bottom"></div>
    <div class="header"></div>
    <div class="content">
        <div class="divPadding">
            <img src="~/Content/images/FBB-Authen-logo.png" style="width:100%" />
            <form method="post" action="" id="selectLogin">
                <div class="container-fluid body-content-box" id="select_access">
                    <div class="col-custom center-screen">
                        <img src="~/Content/images/FBB-Logo.png" class="img-fluid" style="width: 100%;" height="400" border-radius="10px 10px 10px 10px" />
                    </div>
                    <div class="col-custom center-screen">
                        <div class="bg-content-box-login">
                            <div class="row">
                                <img src="~/Content/images/icons8-lock-78.png" class="img-fluid img-key-custom" width="100" height="100" />
                            </div>
                            <div class="row divPadding">
                                <h3 class="font-h3-custom">Access to the System</h3>
                                <h4 class="font-h4-custom">Select to Access Autenticate</h4>
                            </div>
                            <div class="row button-padding">
                                <button type="button" class="btn btn-default" onclick="location.href='/Account/LoginNew'">Login OTP</button>
                                <button type="button" class="btn btn-default" onclick="location.href='/Account/LoginNew'">Login Temporary</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

            <style>
                .divPadding {
                    padding: 35px;
                }
                .body-content-box {
                    display: grid;
                    gap: 50px 10px;
                    grid-template-columns: 50% 50%;
                    background-color: #99cc00;
                    padding: 10px;
                    padding-left: 60px;
                    padding-right: 60px;
                    height: 440px;
                }

                .col-customs {
                    background-color: #ffffff;
                    padding: 20px;
                    font-size: 30px;
                    text-align: center;
                    border-radius: 10px 10px 10px 10px;
                    height: 300px;
                    width: 300px;
                }

                .center-screen {
                    background-color: #ffffff;
                    padding: 20px;
                    font-size: 30px;
                    text-align: center;
                    border-radius: 10px 10px 10px 10px;
                    height: 400px;
                }
            </style>

            <script>
                function windowClose() {
                    window.open('about:blank', '_self', '');
                    window.close();
                }
            </script>
        </div>
    </div>
    <div class="footer"></div>

</body>
</html>



